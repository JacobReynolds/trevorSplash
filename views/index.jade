extends layout

block content
    h1 Trevor Dillon Art
    #emailButton(onclick='toggleAppointment(); this.onclick = null;')
      #slidingUnderline
        h2(style='margin: 0px') Contact me
      br
      br
      form(method="post" action="/sendEmail")
        input(type='text', pattern="^[a-z ,.'-]+$", name='name', placeholder='Your Name', required='')
        input(type='email', name='email', placeholder='Your Email', required='')
        br
        textarea(height='200px', name="body", placeholder='Hey Trevor!', required='')
        br
        button(type='submit') Send

